  </member>
  <member name="DML_PADDING_MODE.DML_PADDING_MODE_CONSTANT">
    <summary>Indicates padding with a constant.</summary>
  </member>
  <member name="DML_PADDING_MODE.DML_PADDING_MODE_EDGE">
    <summary>Indicates edge mode for padding.</summary>
  </member>
  <member name="DML_PADDING_MODE.DML_PADDING_MODE_REFLECTION">
    <summary>Indicates reflection mode for padding.</summary>
  </member>
