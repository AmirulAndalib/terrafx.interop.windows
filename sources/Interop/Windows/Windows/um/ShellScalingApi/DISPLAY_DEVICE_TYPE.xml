    </summary>
    <seealso cref="GetScaleFactorForDevice" />
    <seealso cref="RegisterScaleChangeNotifications" />
    <seealso cref="RevokeScaleChangeNotifications" />
  </member>
  <member name="DISPLAY_DEVICE_TYPE.DEVICE_PRIMARY">
    <summary>
