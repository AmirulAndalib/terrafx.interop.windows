        <item>
          <description>
            <list type="bullet">
              <item>
                <description>
                  <b>SSTF_CHARS</b>
                </description>
              </item>
              <item>
                <description>1</description>
              </item>
            </list>
          </description>
          <description>
            <para>Flash characters in the corner of the screen.</para>
          </description>
        </item>
        <item>
          <description>
            <list type="bullet">
              <item>
                <description>
                  <b>SSTF_DISPLAY</b>
                </description>
              </item>
              <item>
                <description>3</description>
              </item>
            </list>
          </description>
          <description>
            <para>Flash the entire display.</para>
          </description>
        </item>
        <item>
          <description>
            <list type="bullet">
              <item>
                <description>
                  <b>SSTF_NONE</b>
                </description>
              </item>
              <item>
                <description>0</description>
              </item>
            </list>
          </description>
          <description>
            <para>No visual signal</para>
          </description>
        </item>
      </list>
      <para>
        <b>Windows NT/2000:</b> This member is reserved for future use. It must be set to zero.</para>
    </summary>
  </member>
